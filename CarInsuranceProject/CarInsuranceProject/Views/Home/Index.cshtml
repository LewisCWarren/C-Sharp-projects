<div class="row no-gutters m-3">
    <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header text-center">
            <h5 class="m-0">Please provide the following details so we can get you a quote!</h5>
        </div>
        <dov class="card-body">
            @using (Html.BeginForm("GetQuote", "Home", FormMethod.Post))
            {
            <div class="row no-gutters">
                <div class="form-group col-md-12 i">
                    <input name="FirstName" type="text" class="form-control" placeholder="First Name" />
                </div>
                <div class="form-group col-md-12">
                    <input name="LastName" type="text" class="form-control" placeholder="Last Name" />
                </div>
                <div class="form-group col-md-12">
                    <input name="EmailAddress" type="email" class="form-control" placeholder="Email" />
                </div>
                <div class="form-group col-md-12">
                    <h6>Date of birth</h6>
                    <input name="DOB" type="date" class="form-control" placeholder="Date of Birth " />
                </div>
                <div class="form-group col-md-12">
                    <input name="CarYear" type="text" class="form-control" placeholder="Car Year" />
                </div>
                <div class="form-group ">
                    <input name="CarMake" type="text" class="form-control" placeholder="Car Make" />
                </div>
                <div class="form-group col-md-12">
                    <input name="CarModel" type="text" class="form-control" placeholder="Car Model" />
                </div>
                <div class="form-group col-md-12">
                    <hr />
                    <div class="text-center">
                        <h6>Have you ever had a DUI?</h6>
                        <div class="btn m-2">
                            <h6>Yes</h6>
                            <input name="DUI" type="radio" class="form-control" value="true" />
                            <h6>No</h6>
                            <input name="DUI" type="radio" class="form-control" value="false" />
                        </div>
                    </div>
                </div>
                <div class="form-group col-md-12">
                    <input name="SpeedingTickets" type="text" class="form-control" placeholder="How many speeding tickets?" />
                </div>
                <div class="form-group col-md-12">
                    <div class="text-center">
                        <h6>Would you like full coverage, or just liablity?</h6>
                        <div class="m-2 btn">
                            <h6>Full coverage</h6>
                            <input name="FullCoverage" type="radio" class="form-control" value="true" />

                            <h6>Just liability</h6>
                            <input name="FullCoverage" type="radio" class="form-control" value="false" />
                            

                        </div>
                    </div>                    
                </div>
                <div class="form-group col-md-12 text-center">
                    <button name="Submit" type="submit" class="btn btn-outline-info btn-block">
                        Submit
                    </button>
                </div>
            </div>
            }
        </dov>
    </div>
</div>